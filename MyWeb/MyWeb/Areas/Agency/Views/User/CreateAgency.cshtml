        </div>
        <div class="ccfield-prepend">
            @Html.ValidationHtmlMessageFor(model => model.Phone, "", new { @class = "field-validation-valid" })
            <span class="ccform-addon"><i class="fa fa-phone fa-2x"></i></span>
            <input class="ccformfield" type="text" placeholder="Số điện thoại" id="Phone" name="Phone" onclick="Clear1(this.id);" onblur="Clear2(this.id);">
        </div>
        <div class="ccfield-prepend">
            @Html.ValidationHtmlMessageFor(model => model.Representation, "", new { @class = "field-validation-valid" })
            <span class="ccform-addon"><i class="fa fa-user fa-2x"></i></span>
            <input class="ccformfield" type="text" placeholder="Người đại diện" id="Representation" name="Representation" onclick="Clear1(this.id);" onblur="Clear2(this.id);">
        </div>
        <div class="ccfield-prepend">
            @Html.ValidationHtmlMessageFor(model => model.Address, "", new { @class = "field-validation-valid" })
            <span class="ccform-addon"><i class="fa fa-map fa-2x"></i></span>
            <input class="ccformfield" type="text" placeholder="Địa chỉ" id="Address" name="Address" onclick="Clear1(this.id);" onblur="Clear2(this.id);">
        </div>
        <div class="ccfield-prepend">
            @Html.ValidationHtmlMessageFor(model => model.Tax_Code, "", new { @class = "field-validation-valid" })
