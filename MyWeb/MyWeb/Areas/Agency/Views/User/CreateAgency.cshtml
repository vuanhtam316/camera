<style>
    /* Form CSS*/
    .ccform {
        margin: 0 auto;
        width: 60%;
    }

    .ccfield-prepend {
        margin-bottom: 10px;
        width: 100%;
    }

    .ccform-addon {
        color: white;
        float: left;
        padding: 12px;
