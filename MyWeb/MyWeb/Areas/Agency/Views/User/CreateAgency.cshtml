                <input class="ccformfield" type="text" placeholder="Mật khẩu" name="Password" required>
            </div>*@

        <div class="ccfield-prepend">
            <input class="ccbtn" type="submit" value="Thêm mới" />
        </div>
        <div class="form-group" id="messageCreate" style="text-align:center; margin-top:9%">
            @Html.Partial("~/Views/Shared/_Message.cshtml", mess)
        </div>
    </form>
