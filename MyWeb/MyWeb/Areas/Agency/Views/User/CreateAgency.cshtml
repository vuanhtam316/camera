<div style="background:white; height:450px">
    <form method="post" action="CreateAgency" class="ccform" id="myform">
        <div class="ccfield-prepend">
            @Html.ValidationHtmlMessageFor(model => model.Agency_Name, "", new { @class = "field-validation-valid" })
            <span class="ccform-addon"><i class="fa fa-hotel fa-2x"></i></span>
            <input class="ccformfield" type="text" placeholder="Tên đại lý" id="Agency_Name" name="Agency_Name" onclick="Clear1(this.id);" onblur="Clear2(this.id);">
        </div>
        <div class="ccfield-prepend">
            @Html.ValidationHtmlMessageFor(model => model.Email, "", new { @class = "field-validation-valid" })
            <span class="ccform-addon"><i class="fa fa-envelope fa-2x"></i></span>
