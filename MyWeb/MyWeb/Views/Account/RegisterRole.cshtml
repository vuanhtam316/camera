@using MyWeb.Models
@using MyWeb.HtmlHelpers
@{
    Layout = null;
    var mess = ViewBag.MessageCommand as MesageModel.MessagesModel ?? new MesageModel.MessagesModel();
}
<!DOCTYPE html>
<html>
<head>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Login</title>
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/Admin/styles/jquery-ui-1.10.4.custom.min.css")">
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/Admin/styles/font-awesome.min.css")">
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/Admin/styles/bootstrap.min.css")">
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/Admin/styles/AdminLTE.min.css")">
    <style>
        #BtnCanhan:hover {
            background-color: #00A6AD;
        }

        #BtnDoanhnghiep:hover {
            background-color: #8273B0;
        }
    </style>

</head>
<body class="hold-transition login-page body-login">
    <div class="register-box">
        <div class="login-box-body panl-register text-center">
            <div class="form-group" id="messageInfo">
                <img src="/Images/logo-login.png" />
            </div>
            <div class="form-group">
                <div>
                    <h1 style="text-align: left">ĐĂNG KÝ</h1>
                </div>
                <hr width="100%" size="4px" align="center" color="black" />
                <div style="height:30%">

                    <div style="margin:auto">
                        <a href="/Account/RegisterCustomer" style="cursor:pointer">
                            <input type="button" id="BtnDoanhnghiep" style="cursor:pointer;width:40%; height:80%; float:left; background:#A095C4; border:none; font-size:20px;text-align:center; color:white;" value="ĐẠI LÝ ĐĂNG KÝ" />
                        </a>

                    </div>
                    <div style="margin:auto">
                        <a href="/Account/Register" style="">
                            <input type="button" id="BtnCanhan" style="cursor:pointer;width:40%; height:80%; margin-left:10%;background:#00B2BF; border:none; font-size:20px;text-align:center; color:white;" value="CÁ NHÂN ĐĂNG KÝ" />
                        </a>

                    </div>

                    <div style="text-align: left; margin-top:1%">Bạn đã có tài khoản? <a href="/Account/Login">Đăng nhập</a></div>
                    <hr width="100%" size="4px" align="center" color="black" />
                    <div>
                        Bạn gặp khó khăn khi đăng ký?</br>
                        Liên hệ Hotline để được hỗ trợ: </br>
                        0934568852
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="row backgroundLogo text-center">Hệ thống giám sát và cảnh báo thông minh iNSC</div>


    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")"></script>
    <script src="@Url.Content("~/Content/Admin/script/jquery-ui.js")"></script>
    <script src="@Url.Content("~/Content/Admin/script/bootstrap.min.js")"></script>
</body>
</html>
@if (Session["erro"] != null)
{
    @Html.Raw(ViewBag.thongbao)
}
