<!-- Modal -->
@model MyWeb.Areas.Front.Models.ImagesHistory
<style>
    #imgroom {
        width: 100%;
    }
</style>
<script type="text/javascript">
    $(function () {
        var windowHeight = $(window).height();
        $("#modal-content").css("max-height", windowHeight);
        $("#imgroom").css("max-height", windowHeight - 10)
    })
</script>

<div class="modal fade" id="myModalViewVideo" tabindex='-1' style="z-index: 9999999999" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" style="width: 100%;padding: 0; margin: 0;">
        <div class="modal-content" id="modal-content" style="border-radius: 0; color: white; overflow: hidden;">
            @*<div class="modal-header" style="background-color: #bf4346;border-radius: 5px 5px 0 0;">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title text-center" style="color: white;">Preview</h4>
                </div>*@
            <div class="modal-body" id="click_close" style="padding:0">
                <img id="imgroom" src="@Model.ImageUrl"/>
                        @*<img class="img img-full" id="urlImg@(+Model.CAMERA_ID)" data-url="@Model.CAMERA_URL" src="@Model.CAMERA_URL" onload="@("preload('" + Model.CAMERA_URL + "','" + Model.CAMERA_ID + "')")" alt="" title="" />*@
            </div>
        </div>
    </div>
</div>

<script>

    $("#click_close").click(function () {
        $('#myModalViewVideo').modal('hide');
        $('.vlc_1').show();
    });
    $(document).keydown(function (e) {
        // ESCAPE key pressed
        if (e.keyCode == 27) {
            $('#myModalViewVideo').modal('hide');
            $('.vlc_1').show();
        }
    });
</script>