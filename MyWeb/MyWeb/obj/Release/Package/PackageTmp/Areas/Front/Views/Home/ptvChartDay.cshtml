@using MyWeb.Areas.Front.ModelChart;
@model IEnumerable<Day>

<canvas id="MyLineChart"></canvas>
<script>
    @{
        int k = Model.Count();
        string[] ngay= new string[k];
        int[] dataDay = new int[k];
        int i=0;
        foreach (var item in Model)
        {
            ngay[i] = Convert.ToString(item.ID);
            dataDay[i] = item.DataDay;
            i++;
        }
    }
    var strNgay = '@string.Join(",",ngay)';
    var strDataDay = '@string.Join(",",dataDay)';
    var dayJS = new Array();
    dayJS = strNgay.split(',');
    var dataDayJS = new Array();
    dataDayJS = strDataDay.split(',');
    var ctx = document.getElementById("MyLineChart");
    var myLineChart = Chart.Line(ctx, {
        data: {
            labels: dayJS,
            datasets: [
                {
                    label: "Tổng số ảnh",
                    fill: false,
                    lineTension: 0.1,
                    backgroundColor: "rgba(255,255,255,255)",
                    borderColor: "rgba(255,0,0,0.7)",
                    borderCapStyle: 'butt',
                    borderDash: [],
                    borderDashOffset: 0.0,
                    borderJoinStyle: 'miter',
                    pointBorderColor: "rgba(255,0,0,1)",
                    pointBackgroundColor: "#fff",
                    pointBorderWidth: 4,
                    pointHoverRadius: 5,
                    pointHoverBackgroundColor: "rgba(75,192,192,1)",
                    pointHoverBorderColor: "rgba(220,220,220,1)",
                    pointHoverBorderWidth: 2,
                    pointRadius: 1,
                    pointHitRadius: 10,
                    data: dataDayJS,
                }
            ]
        },
        options: {
            scales: {
                yAxes: [{
                    stacked: true
                }]
            }
        }
    });
</script>
